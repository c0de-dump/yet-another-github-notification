{
    "manifest_version": 2,
    "name": "Notifier",
    "version": "1.0",

    "description": "GitHub Notifier",

    "permission": ["storage", "notifications"],
    "icons": {
        "48": "icons/border-48.png"
    },
    "background": {
        "scripts": ["browser-polyfill.js", "dist/background/index.js"],
        "persistent": false
    },
    "options_ui": {
        "page": "dist/setting"
    }
}
