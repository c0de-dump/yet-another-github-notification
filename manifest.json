{
    "manifest_version": 2,
    "name": "Notifier",
    "version": "1.0",
    "description": "GitHub Notifier",
    "icons": {
        "48": "icons/border-48.png"
    },
    "permissions": ["alarms", "storage", "webRequest"],
    "browser_specific_settings": {
        "gecko": {
            "id": "github-notifier-gecko@addon",
            "strict_min_version": "60.0"
        }
    },
    "content_scripts": [
        {
            "matches": ["https://*/*"],
            "js": ["browser-polyfill.js"],
            "run_at": "document_end"
        }
    ],
    "options_ui": { "page": "dist/setting.html" },
    "background": {
        "scripts": ["browser-polyfill.js", "dist/background.js"],
        "persistent": false,
        "type": "module"
    }
}
